{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "prom/prometheus"
      ],
      "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[2-9]+$/",
      "automerge": true,
      "ignoreTests": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\//"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)*\\.job$"
      ],
      "matchStrings": [
        "\\s*image\\s*=\\s*\"(?<depName>.*?)[@:](?<currentValue>.*?)\"\\n"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
